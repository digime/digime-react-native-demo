{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "sourceMap": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "removeComments": true,
        "moduleResolution": "classic",
        "types": ["react", "react-native", "node"],
        "outDir": "dist",
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        "android",
        "ios",
        ".idea"
    ],
    "include": [
        "src/**/*",
        "index.ts",
        "build"
    ]
}
